@model IEnumerable<IsaacLewisTermProject.Models.Feat>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeatEffect)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeatEffect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FeatId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FeatId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FeatId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
